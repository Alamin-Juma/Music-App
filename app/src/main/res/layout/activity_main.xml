<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">
        <Button
            android:id="@+id/sautisolAlbum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sauti_sol_album"
            style="@style/buttonStyle"
            />
        <ImageView
            android:id="@+id/sautisol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/sautisol"
            />

        <Button
            android:id="@+id/baisaAlbum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mr_blue_album"
            style="@style/buttonStyle"
            />

        <ImageView
            android:id="@+id/baisa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/baisa" />

        <Button
            android:id="@+id/kondeboiAlbum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kondeboi_album"
            style="@style/buttonStyle"
            />
        <ImageView
            android:id="@+id/kondeboi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/kondeboi"
            />
        <Button
            android:id="@+id/bensolAlbum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bensol_album"
            style="@style/buttonStyle"
            />
        <ImageView
            android:id="@+id/bensol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/bensol"
            />
    </LinearLayout>

</ScrollView>